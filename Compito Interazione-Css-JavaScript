<script>
    function solof()
    {
        document.getElementById("cambia").style.fontFamily = "Arial, sans-serif";
        document.getElementById("cambia").style.fontSize = "50px";
        document.getElementById("cambia").style.color = "#2e9f82";
        document.body.style.background = "#68c170";
        document.getElementById("mybutton").style.color = "#3a4874";
        document.getElementById("mybutton").style.fontSize = "40px";
        document.getElementById("mybutton").style.fontFamily ="Arial, sans-serif";
        document.getElementById("mybutton").style.backgroundColor = "#ffcc00";
    }
