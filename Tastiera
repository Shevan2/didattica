 CSS--------------------------------------------------------------------------




/* ------------------------------------------
   Reset e Impostazioni Globali
------------------------------------------ */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  :root {
    /* Dimensione dei tasti per la riga funzione e il tastierino numerico */
    --key-size: 50px;
    /* Dimensione dei tasti del blocco alfanumerico */
    --main-key-size: 60px;
    --gap: 6px;
    --transition-duration: 0.3s;
    --key-bg: #131313;
    --key-border: #818180;
    --key-color: #ffffff;
  }
  
  /* ------------------------------------------
     Stile Base del Body
  ------------------------------------------ */
  body {
    background: #1f1f1f;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }
  
  /* ------------------------------------------
     Contenitore Principale della Tastiera
  ------------------------------------------ */
  .keyboard-container {
    width: 100%;
    max-width: 1100px;
    padding: var(--gap);
    display: flex;
    flex-direction: column;
    gap: var(--gap);
  }
  
  /* ------------------------------------------
     Riga dei Tasti Funzione (usa --key-size)
  ------------------------------------------ */
  .function-row {
    display: flex;
    gap: var(--gap);
    justify-content: flex-start;
  }
  .function-row .key {
    width: var(--key-size);
    height: var(--key-size);
    line-height: calc(var(--key-size) - 4px);
  }
  
  /* ------------------------------------------
     Container del Blocco Integrato (alfanumerico + tastierino numerico)
  ------------------------------------------ */
  .main-container {
    display: flex;
    gap: var(--gap);
    align-items: flex-start;
  }
  
  /* ------------------------------------------
     Blocco Alfanumerico (Main Block)
  ------------------------------------------ */
  .main-block {
    /* Larghezza si adatta al contenuto */
    width: max-content;
    display: flex;
    flex-direction: column;
    gap: var(--gap);
  }
  
  /* Tutti i tasti nel blocco alfanumerico usano --main-key-size */
  .main-block .key {
    width: var(--main-key-size);
    height: var(--main-key-size);
    line-height: calc(var(--main-key-size) - 4px);
  }
  
  /* Tasti speciali nel blocco alfanumerico */
  .main-block .key.tab {
    width: calc(var(--main-key-size) + 20px);
  }
  .main-block .key.backspace {
    width: calc(2 * var(--main-key-size) + var(--gap));
  }
  .main-block .key.caps {
    width: calc(var(--main-key-size) + 10px);
  }
  .main-block .key.enter {
    width: calc(var(--main-key-size) + 10px);
  }
  /* Il primo tasto Shift (sinistro) deve avere la dimensione standard */
  .main-block .key.shift-left {
    width: var(--main-key-size);
  }
  /* Il secondo tasto Shift (destro) rimane largo */
  .main-block .key.shift {
    width: calc(2.2 * var(--main-key-size));
  }
  /* La barra dello spazio deve essere lunga come 6 tasti insieme (6 * main-key-size + 5 gap) */
  .main-block .key.space {
    width: calc(6 * var(--main-key-size) + 5 * var(--gap));
  }
  /* I tasti modificatori usano --main-key-size */
  .main-block .key.ctrl,
  .main-block .key.win,
  .main-block .key.alt,
  .main-block .key.altgr,
  .main-block .key.menu {
    width: var(--main-key-size);
  }
  
  /* ------------------------------------------
     Blocco Numerico (Numpad Block) – INVARIATO
  ------------------------------------------ */
  .numpad-block {
    display: flex;
    flex-direction: column;
    gap: var(--gap);
  }
  .numpad-control {
    display: flex;
    gap: var(--gap);
    justify-content: center;
  }
  .numpad-digits {
    display: grid;
    grid-template-columns: repeat(4, var(--key-size));
    grid-template-rows: repeat(4, var(--key-size));
    gap: var(--gap);
  }
  .numpad-control .key,
  .numpad-digits .key {
    width: var(--key-size);
    height: var(--key-size);
    line-height: calc(var(--key-size) - 4px);
  }
  
  /* ------------------------------------------
     Stile Base per Ogni Tasto (comune)
  ------------------------------------------ */
  .key {
    position: relative;
    background: var(--key-bg);
    color: var(--key-color);
    border: 2px solid var(--key-border);
    font-size: 1rem;
    text-align: center;
    cursor: pointer;
    transition: transform var(--transition-duration);
    /* Forma ottagonale */
    clip-path: polygon(25% 0%, 75% 0%, 100% 25%, 100% 75%, 75% 100%, 25% 100%, 0% 75%, 0% 25%);
  }
  .key:hover {
    transform: scale(1.1);
  }
  .key::after {
    content: "";
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: inherit;
    background: linear-gradient(45deg, #ff4c24, #00ff00, #0000ff);
    background-size: 300%;
    filter: blur(4px);
    opacity: 0.7;
    z-index: -1;
    animation: rgbGlow 3s linear infinite;
  }
  @keyframes rgbGlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* ------------------------------------------
     Numpad: Tasto + e Tasto Invio (spanning verticale)
  ------------------------------------------ */
  .numpad-digits .plus,
  .numpad-digits .enter-numpad {
    height: calc(2 * var(--key-size) + var(--gap));
    line-height: calc(2 * var(--key-size) + var(--gap) - 4px);
  }
  /* Numpad: Tasto 0 con doppia larghezza */
  .numpad-digits .zero {
    width: calc(2 * var(--key-size) + var(--gap));
  }
  
